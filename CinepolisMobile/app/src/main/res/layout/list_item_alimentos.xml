<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_alimentos"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagen_alimento"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:src="@drawable/carritocompras" />

    <TextView
        android:id="@+id/titulo_alimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/imagen_alimento"
        android:fontFamily="@font/quicksand"
        android:text="Titulo"
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_alimento"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/imagen_alimento"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="Precio"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_alimento"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="-26dp"
        android:layout_toRightOf="@+id/precio"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="Tipo"
        android:textSize="15dp" />



</RelativeLayout>